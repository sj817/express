{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": true,
    "types": [
      "node",
      "qs",
      "accepts",
      "body-parser",
      "content-disposition",
      "connect",
      "cookie-signature",
      "debug",
      "express",
      "express-serve-static-core",
      "mime-types",
      "parseurl",
      "range-parser"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../router/src/**/*.spec.ts",
    "../router/src/**/*.bench.ts",
    "../path-to-regexp/src/**/*.spec.ts",
    "../path-to-regexp/src/**/*.bench.ts"
  ]
}
